<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#61ade0">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:textSize="22dp"
        android:textStyle="bold"
        android:id="@+id/ma1"
        android:text="동사 ます형 1그룹"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold"
        android:id="@+id/ma0"
        android:text="뜻 : ~합니다"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:textSize="15dp"
        android:textStyle="bold"
        android:id="@+id/ma7"
        android:text="う단 -> い단 + ます"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:textSize="15dp"
        android:textStyle="bold"
        android:id="@+id/ma2"
        android:text="2, 3 그룹에 속하지 않는 모든 동사"/>

    <TextView
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:textSize="15dp"
        android:textStyle="bold"
        android:id="@+id/ma3"
        android:text="*예외 1그룹 : 형태는 2그룹이지만 1그룹인 동사들"/>

    <TextView
        android:id="@+id/ma4"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:textStyle="bold"
        android:text="行(い)く(가다) -> 行(い)きます(갑니다)" />

    <TextView
        android:id="@+id/ma5"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:textStyle="bold"
        android:text="飲(の)む(마시다) -> 飲(の)みます(마십니다)" />

    <TextView
        android:id="@+id/ma6"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:textStyle="bold"
        android:text="*帰(かえ)る(돌아가다) -> 帰(かえ)ります(돌아갑니다)" />


    <TextView
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:textSize="22dp"
        android:textStyle="bold"
        android:id="@+id/ma8"
        android:text="동사 ます형 2그룹"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:textSize="15dp"
        android:textStyle="bold"
        android:id="@+id/ma9"
        android:text="る빼고 + ます"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:textSize="15dp"
        android:textStyle="bold"
        android:id="@+id/ma10"
        android:text="る로 끝나되, 바로 앞이 い단,え단인 동사들 "/>

    <TextView
        android:id="@+id/ma11"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:textStyle="bold"
        android:text="見(み)る(보다) -> 見(み)ます(봅니다)" />

    <TextView
        android:id="@+id/ma12"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:textStyle="bold"
        android:text="食(た)べる(먹다) -> 食(た)べます(먹습니다)" />


    <TextView
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:textSize="22dp"
        android:textStyle="bold"
        android:id="@+id/ma13"
        android:text="동사 ます형 3그룹"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:textSize="15dp"
        android:textStyle="bold"
        android:id="@+id/ma14"
        android:text="2개뿐이므로 암기할 것!"/>

    <TextView
        android:id="@+id/ma16"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:textStyle="bold"
        android:text="来(く)る(오다) -> きます(옵니다)" />

    <TextView
        android:id="@+id/ma17"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:textStyle="bold"
        android:text="する（하다) -> します(먹습니다)" />

    <TextView
        android:id="@+id/ma18"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:textStyle="bold"
        android:text="" />

</LinearLayout>
</ScrollView>