<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#61ade0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>

    <Button
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="이전"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:id="@+id/prev"
        android:background="@drawable/frame"
        android:layout_gravity="left|bottom" />

    <Button
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="다음"
        android:id="@+id/next"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:background="@drawable/frame"
        android:layout_gravity="right|bottom" />

    <ViewFlipper
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/flipper">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="175dp"
                    android:text="1. 新しい　くるまですね。"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="24dp"
                    android:gravity="center"
               />

                <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. あたらしい"
                    android:textSize="18dp"
                    android:id="@+id/あたらしい"
                    android:textStyle="bold"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. あだらしい"
                    android:textSize="18dp"
                    android:id="@+id/あだらしい"
                    android:textStyle="bold"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3. あらたしい"
                    android:textSize="18dp"
                    android:id="@+id/あらたしい"
                    android:textStyle="bold"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4. あらだしい"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:id="@+id/あらだしい"
                    android:checked="false" />
        </RadioGroup>
        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_weight="0.00"
                android:text="2. 今日は　寒いです。"
                android:textColor="#ffffff"
                android:textSize="24dp"
                android:singleLine="false"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_column="13" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:id="@+id/radioGroup2"
                android:layout_height="wrap_content" >

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. すずしい "
                android:textSize="18dp"
                android:textStyle="bold"
                android:checked="false" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. あたたかい"
                android:textSize="18dp"
                android:textStyle="bold"
                android:id="@+id/あたたかい"
                android:checked="false" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3. あつい"
                android:textSize="18dp"
                android:id="@+id/あつい"
                android:textStyle="bold"
                android:checked="false" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4. さむい"
                android:textSize="18dp"
                android:textStyle="bold"
                android:id="@+id/さむい"
                android:checked="false" />
            </RadioGroup>
        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_weight="0.00"
                android:text="3. 電気を つけて　ください。"
                android:textColor="#ffffff"
                android:textSize="24dp"
                android:singleLine="false"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_column="13" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:id="@+id/radioGroup3"
                android:layout_height="wrap_content" >

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. てんき"
                android:textSize="18dp"
                android:id="@+id/てんき"
                android:textStyle="bold"
                android:checked="false" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. てんぎ"
                android:textSize="18dp"
                android:id="@+id/てんぎ"
                android:textStyle="bold"
                android:checked="false" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3. でんき"
                android:textSize="18dp"
                android:id="@+id/でんき"
                android:textStyle="bold"
                android:checked="false" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4. でんぎ"
                android:textSize="18dp"
                android:textStyle="bold"
                android:id="@+id/でんぎ"
                android:checked="false" />
        </RadioGroup>
        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_weight="0.00"
                android:text="４. ほてるは　ゆうめいです。"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="24dp"
                android:singleLine="false"
                android:gravity="center"
                android:layout_column="13" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:id="@+id/radioGroup4"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. ホラル"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. ホテル"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3. ホラい "
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4. ホテイ"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:checked="false" />
            </RadioGroup>
        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_weight="0.00"
                android:text="５. わたしは　デパートに　つとめて　います。"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textSize="24dp"
                android:singleLine="false"
                android:gravity="center"
                android:layout_column="13" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:id="@+id/radioGroup5"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. わたしは　デパートで　かいものを　して　います。"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. わたしは　デパートで　さんぼを　して　います。"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3. わたしは　デパートで　しごとを　して　います。 "
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="4. わたしは　デパートで　やすんで　います。"
                    android:textSize="13dp"
                    android:checked="false"
                    />
            </RadioGroup>
        </TableLayout>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content">


            <Button
                android:background="@drawable/frame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="결과보기"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:id="@+id/result"
                />

        </TableLayout>

    </ViewFlipper>
</FrameLayout>
