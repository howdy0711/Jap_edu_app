<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#61ade0">

    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_marginLeft="150dp"
        android:textSize="24dp"
        android:textStyle="bold"
        android:text="겸양어" />

    <TextView
        android:id="@+id/t2"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="22dp"
        android:textStyle="bold"
        android:text="お＋ます＋する" />

    <TextView
        android:id="@+id/t2_2"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/t1"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:textStyle="bold"
        android:text="하다" />


    <TextView
        android:id="@+id/t3"
        android:layout_below="@+id/t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="22dp"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:text="ご＋한자어+する" />

    <TextView
        android:layout_below="@+id/t2"
        android:layout_toRightOf="@+id/t3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:text="하다" />

    <TextView
        android:id="@+id/t4"
        android:layout_below="@+id/t3"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold"
        android:text="예) お読(よ)みします" />


    <TextView
        android:id="@+id/t5"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/t4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold"
        android:text="예) ご説明(せつめい)します" />


    <TextView
        android:id="@+id/t6"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/t5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="22dp"
        android:textStyle="bold"
        android:text="お＋ます＋いたす" />

    <TextView
        android:id="@+id/t6_6"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/t5"
        android:layout_toRightOf="@+id/t6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:text="~ 하다" />

    <TextView
        android:id="@+id/t7"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/t6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="22dp"
        android:textStyle="bold"
        android:text="ご＋한자어+いたす" />

    <TextView
        android:id="@+id/t7_7"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/t6"
        android:layout_toRightOf="@+id/t7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:text="~ 하다" />


    <TextView
        android:id="@+id/t8"
        android:layout_below="@+id/t7"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold"
        android:text="예) お読(よ)みいたします" />


    <TextView
        android:id="@+id/t9"
        android:layout_below="@+id/t8"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold"
        android:text="예) ご説明(せつめい)いたします" />
</RelativeLayout>

