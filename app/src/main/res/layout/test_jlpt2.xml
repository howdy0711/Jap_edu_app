<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#61ade0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>

    <Button
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="이전"
        android:background="@drawable/frame"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:id="@+id/prev"

        android:layout_gravity="left|bottom" />

    <Button
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="다음"
        android:background="@drawable/frame"
        android:id="@+id/next"
        android:textColor="#ffffff"
        android:textSize="18dp"

        android:layout_gravity="right|bottom" />

    <ViewFlipper
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/flipper">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:text="1. この黒い(種)からどんな花がさくのだろうか。"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="24dp"
                android:gravity="center"
                />

            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. だね"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. じゅ"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3. たね"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4. しゅ"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:checked="false" />
            </RadioGroup>
        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_weight="0.00"
                android:text="2. 戦後、日本は(貧しい)時代を経験した。"
                android:textColor="#ffffff"
                android:textSize="24dp"
                android:singleLine="false"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_column="13" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:id="@+id/radioGroup2"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. まずしい"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. きびしい"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3. けわしい"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4. はげしい"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:checked="false" />
            </RadioGroup>
        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_weight="0.00"
                android:text="3. 今日は、ごみの(しゅうしゅう)日ですか。 "
                android:textColor="#ffffff"
                android:textSize="24dp"
                android:singleLine="false"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_column="13" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:id="@+id/radioGroup3"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. 収集"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. 拾集"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3. 修集"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4. 募集"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:checked="false" />
            </RadioGroup>
        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_weight="0.00"
                android:text="4. このカメラはデザインも性能(すぐれて)いる。"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="24dp"
                android:singleLine="false"
                android:gravity="center"
                android:layout_column="13" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:id="@+id/radioGroup4"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. 駈れて"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. 忘れて"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3. 超れて"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4. 優れて"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:checked="false" />
            </RadioGroup>
        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_weight="0.00"
                android:text="5. 新しい商品を売るために、彼は毎日忙しく飛び　(    )いる。"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textSize="24dp"
                android:singleLine="false"
                android:gravity="center"
                android:layout_column="13" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:id="@+id/radioGroup5"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. かけて"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. かかって"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3. まわして"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="4. まわって"
                    android:textSize="13dp"
                    android:checked="false"
                    />
            </RadioGroup>
        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_weight="0.00"
                android:text="6. あの映画の最後は(    )場面として知られている。"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textSize="24dp"
                android:singleLine="false"
                android:gravity="center"
                android:layout_column="13" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:id="@+id/radioGroup6"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. 名"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. 高"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3. 良"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="4. 重"
                    android:textSize="13dp"
                    android:checked="false" />

            </RadioGroup>
        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_weight="0.00"
                android:text="7. 日本人の平均(   )は、男性が　79歳、女性が86歳である"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textSize="24dp"
                android:singleLine="false"
                android:gravity="center"
                android:layout_column="13" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:id="@+id/radioGroup7"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. 生命"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. 寿命"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3. 人生"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="4. 一生"
                    android:textSize="13dp"
                    android:checked="false" />

            </RadioGroup>
        </TableLayout>


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_weight="0.00"
                android:text="8. 田中さんは(単なる)友人です"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textSize="24dp"
                android:singleLine="false"
                android:gravity="center"
                android:layout_column="13" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:id="@+id/radioGroup8"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. 大切な"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. 一生な"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3. ただの"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="4. 唯一の"
                    android:textSize="13dp"
                    android:checked="false" />

            </RadioGroup>
        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_weight="0.00"
                android:text="9. あの人のお母さんはいつも(ほがらか)です。"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textSize="24dp"
                android:singleLine="false"
                android:gravity="center"
                android:layout_column="13" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:id="@+id/radioGroup9"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. おとなしい"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. まじめ"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3. りっば"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="4. あかるい"
                    android:textSize="13dp"
                    android:checked="false" />

            </RadioGroup>
        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_weight="0.00"
                android:text="10. 最後のバスに間に合わなくて困っていた( 　)、運よくタクシーが通りかかり無事帰宅できた。"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textSize="24dp"
                android:singleLine="false"
                android:gravity="center"
                android:layout_column="13" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:id="@+id/radioGroup10"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. あげくに"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. ために"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3. とたんに"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="4. ところに"
                    android:textSize="13dp"
                    android:checked="false" />

            </RadioGroup>
        </TableLayout>



        <TableLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content">


            <Button

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="결과보기"
                android:background="@drawable/frame"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:id="@+id/result" />

        </TableLayout>

    </ViewFlipper>
</FrameLayout>