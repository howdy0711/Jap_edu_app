<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#61ade0"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.lg.cpa.grammar">


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Level1"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:background="@drawable/frame"
        android:id="@+id/button11"
        android:onClick="grammar1" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Level2"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:background="@drawable/frame"
        android:id="@+id/button12"
        android:layout_below="@+id/button11"
        android:layout_marginTop="4dp"
        android:onClick="grammar2" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/frame"
        android:text="Level3"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:id="@+id/button13"
        android:layout_below="@+id/button12"
        android:layout_marginTop="4dp"
        android:onClick="grammar3" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Level4"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:background="@drawable/frame"
        android:id="@+id/button14"
        android:layout_below="@+id/button13"
        android:layout_marginTop="4dp"
        android:onClick="grammar4" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Level5"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:background="@drawable/frame"
        android:id="@+id/button15"
        android:layout_marginTop="4dp"
        android:onClick="grammar5" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Level6"
        android:background="@drawable/frame"
        android:id="@+id/button16"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/button15"
        android:onClick="grammar6" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="독 해"
        android:background="@drawable/frame"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/button16"
        android:onClick="grammar7"
        />

    <Button
        android:layout_marginTop="30pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backButton"
        android:text="뒤로가기"
        android:background="#ffffff"
        android:onClick="backButton"
        />


</LinearLayout>
