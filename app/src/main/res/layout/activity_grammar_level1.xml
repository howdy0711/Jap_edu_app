<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#61ade0"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lg.cpa.grammar">


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="히라가나 연습"
        android:background="@drawable/frame"
        android:textColor="#ffffff"
        android:id="@+id/button17"
        android:textStyle="bold"
        android:textSize="20dp"
        android:onClick="hiragana"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="가타카나연습"
        android:layout_marginTop="4dp"
        android:textColor="#ffffff"
        android:background="@drawable/frame"
        android:id="@+id/button18"
        android:textSize="20dp"
        android:textStyle="bold"
        android:onClick="katakana"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="탁음"
        android:layout_marginTop="4dp"
        android:textColor="#ffffff"
        android:background="@drawable/frame"
        android:id="@+id/button19"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/button18"
        android:onClick="tak"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="반탁음"
        android:layout_marginTop="4dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:background="@drawable/frame"
        android:id="@+id/button20"
        android:onClick="bantak"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="요음"
        android:layout_marginTop="4dp"
        android:textColor="#ffffff"
        android:background="@drawable/frame"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/button21"
        android:onClick="yo"
         />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="촉음"
        android:layout_marginTop="4dp"
        android:textColor="#ffffff"
        android:background="@drawable/frame"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/button22"
        android:onClick="chock"
      />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="장음"
        android:layout_marginTop="4dp"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="@drawable/frame"
        android:id="@+id/button23"
        android:onClick="jang"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ん발음"
        android:layout_marginTop="4dp"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="@drawable/frame"
        android:onClick="nng"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10pt"
        android:text="뒤로가기"
        android:background="#ffffff"
        android:id="@+id/backButton"
        android:onClick="backButton"
        />

</LinearLayout>
