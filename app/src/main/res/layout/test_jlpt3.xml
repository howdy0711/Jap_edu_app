<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#61ade0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>

    <Button
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="이전"
        android:background="@drawable/frame"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:id="@+id/prev"

        android:layout_gravity="left|bottom" />

    <Button
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="다음"
        android:background="@drawable/frame"
        android:id="@+id/next"
        android:textColor="#ffffff"
        android:textSize="18dp"

        android:layout_gravity="right|bottom" />

    <ViewFlipper
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/flipper">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:text="1. 山本さんはクラスの(代表)に鰓ばれた"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="24dp"
                android:gravity="center"
                />

            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. たいひょう"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. だいひょ"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3. だいひょう"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4. たいひょ"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:checked="false" />
            </RadioGroup>
        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_weight="0.00"
                android:text="2. 3日前から雨が(続いて)いる。"
                android:textColor="#ffffff"
                android:textSize="24dp"
                android:singleLine="false"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_column="13" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:id="@+id/radioGroup2"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.ういて"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. うごいで"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3. つづいて"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4. ついて"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:checked="false" />
            </RadioGroup>
        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_weight="0.00"
                android:text="3. 今ごろ"
                android:textColor="#ffffff"
                android:textSize="24dp"
                android:singleLine="false"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_column="13" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:id="@+id/radioGroup3"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. それでは、(今ごろ)テストを始めます。"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. (今ごろ)東京では桜が咲いているでしょう。"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3. (今ごろ)現金で支払うことが小なくなった。 "
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4. (今ごろ)雨が降りそうな天気だ。"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:checked="false" />
            </RadioGroup>
        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_weight="0.00"
                android:text="４. A 『時間ありますか』
   B 『ええ、1時間（　　）ありますよ』。"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="24dp"
                android:singleLine="false"
                android:gravity="center"
                android:layout_column="13" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:id="@+id/radioGroup4"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.ごろなら"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. ごろでも"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3. ぐらいでも"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4. ぐらいなら"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:checked="false" />
            </RadioGroup>
        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_weight="0.00"
                android:text="5. アルバイトの(めんせつ)は来週の土曜日だ。 "
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textSize="24dp"
                android:singleLine="false"
                android:gravity="center"
                android:layout_column="13" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:id="@+id/radioGroup5"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. 面接"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. 面役"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3. 両接"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="4. 両役"
                    android:textSize="13dp"
                    android:checked="false"
                    />
            </RadioGroup>
        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_weight="0.00"
                android:text="6. 困っているときに、先生に(たすけて)いただきました。"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textSize="24dp"
                android:singleLine="false"
                android:gravity="center"
                android:layout_column="13" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:id="@+id/radioGroup6"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. 守けて"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. 助けて"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3. 溶けて"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="4. 飽けて"
                    android:textSize="13dp"
                    android:checked="false" />

            </RadioGroup>
        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_weight="0.00"
                android:text="7. (       )寝たので、気持がいい"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textSize="24dp"
                android:singleLine="false"
                android:gravity="center"
                android:layout_column="13" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:id="@+id/radioGroup7"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. すっかり"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. ぐっすり"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3. はっきり"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="4. ぴったり"
                    android:textSize="13dp"
                    android:checked="false" />

            </RadioGroup>
        </TableLayout>


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_weight="0.00"
                android:text="8. ここのパソコンは誰でも使えますか、コピーは(     )。"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textSize="24dp"
                android:singleLine="false"
                android:gravity="center"
                android:layout_column="13" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:id="@+id/radioGroup8"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. 有料"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. 無料"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3. 費用"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="4. 料金"
                    android:textSize="13dp"
                    android:checked="false" />

            </RadioGroup>
        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_weight="0.00"
                android:text="9. 父が短気かの(   )、母の方は気が長い"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textSize="24dp"
                android:singleLine="false"
                android:gravity="center"
                android:layout_column="13" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:id="@+id/radioGroup9"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. において"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. について"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3. によって"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="4. に対して"
                    android:textSize="13dp"
                    android:checked="false" />

            </RadioGroup>
        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_weight="0.00"
                android:text="10. 先週 (   )   (   )  (★)   (   )　から、行ってみませんか"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textSize="24dp"
                android:singleLine="false"
                android:gravity="center"
                android:layout_column="13" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:id="@+id/radioGroup10"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. ばかりの"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. レストランが"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3. オープンした"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="4. ある"
                    android:textSize="13dp"
                    android:checked="false" />

            </RadioGroup>
        </TableLayout>



        <TableLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content">


            <Button

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="결과보기"
                android:background="@drawable/frame"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:id="@+id/result" />

        </TableLayout>

    </ViewFlipper>
</FrameLayout>