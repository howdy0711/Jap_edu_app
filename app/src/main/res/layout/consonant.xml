<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#61ade0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>

    <Button
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="後ろ"
        android:id="@+id/prev"
        android:textSize="22dp"
        android:textStyle="bold"
        android:background="@drawable/frame"
        android:textColor="#ffffff"
        android:layout_gravity="left|bottom" />

    <Button
        android:layout_width="170dp"
        android:textSize="22dp"
        android:textStyle="bold"
        android:background="@drawable/frame"
        android:layout_height="wrap_content"
        android:text="前"
        android:id="@+id/next"
        android:textColor="#ffffff"
        android:layout_gravity="right|bottom" />

    <ViewFlipper
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/flipper">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.58"
                android:text="ㄱ [ギヨック]"
                android:textColor="#ffffff"
                android:textSize="35dp"
                android:singleLine="false"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.58"
                android:text="ㄴ [ニウン]"
                android:textColor="#ffffff"
                android:textSize="35dp"
                android:layout_gravity="center"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.58"
                android:text="ㄷ [デーグッ]"
                android:textColor="#ffffff"
                android:textSize="35dp"
                android:layout_gravity="center"
                android:gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.58"
                android:text="ㄹ [りウル]"
                android:textColor="#ffffff"
                android:textSize="35dp"
                android:gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

                  <TextView
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="0.58"
                  android:text="ㅁ [ミウン]"
                  android:textColor="#ffffff"
                  android:textSize="35dp"
                  android:gravity="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.58"
                    android:text="ㅂ [ビウブ]"
                    android:textColor="#ffffff"
                    android:textSize="35dp"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.58"
                    android:text="ㅅ [シオッ]"
                    android:textColor="#ffffff"
                    android:textSize="35dp"
                    android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.58"
                android:text="ㅇ [イウング]"
                android:textColor="#ffffff"
                android:textSize="35dp"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.58"
                android:text="ㅈ [ジウッ]"
                android:textColor="#ffffff"
                android:textSize="35dp"
                android:gravity="center" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.58"
                android:text="ㅊ [チウッ]"
                android:textColor="#ffffff"
                android:textSize="35dp"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.58"
                android:text="ㅋ [キウック]"
                android:textColor="#ffffff"
                android:textSize="35dp"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.58"
                android:text="ㅌ [ティウッ]"
                android:textColor="#ffffff"
                android:textSize="35dp"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.58"
                android:text="ㅍ [ピウプ]"
                android:textColor="#ffffff"
                android:textSize="35dp"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.58"
                android:text="ㅎ [ヒウッ]"
                android:textColor="#ffffff"
                android:textSize="35dp"
                android:gravity="center" />
        </LinearLayout>

    </ViewFlipper>

</FrameLayout>
