<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#61ade0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>

    <Button
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="이전"
        android:background="@drawable/frame"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:id="@+id/prev"

        android:layout_gravity="left|bottom" />

    <Button
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="다음"
        android:background="@drawable/frame"
        android:id="@+id/next"
        android:textColor="#ffffff"
        android:textSize="18dp"

        android:layout_gravity="right|bottom" />

    <ViewFlipper
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/flipper">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:text="1. あには　バスで　会社に　(通って)　います。"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="24dp"
                android:gravity="center"
                />

            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. むかって"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. かよって"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3. わたってい"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4. もどって"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:checked="false" />
            </RadioGroup>
        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_weight="0.00"
                android:text="2. わたしの　せんもんは　医学です。"
                android:textColor="#ffffff"
                android:textSize="24dp"
                android:singleLine="false"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_column="13" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:id="@+id/radioGroup2"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.かがく "
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. いがく "
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3. すうがく"
                    android:textSize="18dp"
                    android:id="@+id/すうがく"
                    android:textStyle="bold"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4. ぶんがく"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:checked="false" />
            </RadioGroup>
        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_weight="0.00"
                android:text="3. ふねて　にもつを　(おくります)。"
                android:textColor="#ffffff"
                android:textSize="24dp"
                android:singleLine="false"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_column="13" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:id="@+id/radioGroup3"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. 近ます"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. 取ります"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3. 辺ります"
                    android:textSize="18dp"
                    android:id="@+id/辺ります"
                    android:textStyle="bold"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4. 送ります"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:checked="false" />
            </RadioGroup>
        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_weight="0.00"
                android:text="４. 母は　ラジオで　(おんがく)を　聞いています。"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="24dp"
                android:singleLine="false"
                android:gravity="center"
                android:layout_column="13" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:id="@+id/radioGroup4"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. 音楽"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. 音薬"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3. 音響 "
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4. 淫楽"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:checked="false" />
            </RadioGroup>
        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_weight="0.00"
                android:text="５.（　　）しないで、　どうぞ　たくさん　たべて　ください。 "
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textSize="24dp"
                android:singleLine="false"
                android:gravity="center"
                android:layout_column="13" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:id="@+id/radioGroup5"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. しっれい"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. しっぱい "
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3. えんりょ  "
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="4. はんたい"
                    android:textSize="13dp"
                    android:checked="false"
                    />
            </RadioGroup>
        </TableLayout>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content">


            <Button

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="결과보기"
                android:background="@drawable/frame"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:id="@+id/result"
                />

        </TableLayout>

    </ViewFlipper>
</FrameLayout>