<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#61ade0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>

    <Button
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="後ろ"
        android:id="@+id/prev"
        android:textSize="22dp"
        android:textStyle="bold"
        android:background="@drawable/frame"
        android:textColor="#ffffff"
        android:layout_gravity="left|bottom" />

    <Button
        android:layout_width="170dp"
        android:textSize="22dp"
        android:textStyle="bold"
        android:background="@drawable/frame"
        android:layout_height="wrap_content"
        android:text="前"
        android:id="@+id/next"
        android:textColor="#ffffff"
        android:layout_gravity="right|bottom" />

    <ViewFlipper
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/flipper">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.58"
                android:text="ㅏ [ア]"
                android:textColor="#ffffff"
                android:textSize="35dp"
                android:singleLine="false"
                android:gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="ㅑ [ヤ]"
                android:textColor="#ffffff"
                android:textSize="35dp"
                android:layout_gravity="center"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="ㅓ [オ]"
                android:textColor="#ffffff"
                android:textSize="35dp"
                android:layout_gravity="center"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.58"
                android:text="ㅕ [オヨ/ヨ]"
                android:textColor="#ffffff"
                android:textSize="35dp"
                android:gravity="center" />
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.58"
                    android:text="ㅐ,ㅔ [エ]"
                    android:textColor="#ffffff"
                    android:textSize="35dp"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.58"
                    android:text="ㅖ,ㅒ [イェ]"
                    android:textColor="#ffffff"
                    android:textSize="35dp"
                    android:gravity="center" />
            </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.58"
                android:text="ㅗ [オ]"
                android:textColor="#ffffff"
                android:textSize="35dp"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.58"
                android:text="ㅛ [ヨ]"
                android:textColor="#ffffff"
                android:textSize="35dp"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.58"
                android:text="ㅜ [ウ]"
                android:textColor="#ffffff"
                android:textSize="35dp"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.58"
                android:text="ㅠ [ユ]"
                android:textColor="#ffffff"
                android:textSize="35dp"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.58"
                android:text="ㅡ [ウウ]"
                android:textColor="#ffffff"
                android:textSize="35dp"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.58"
                android:text="ㅣ [イ]"
                android:textColor="#ffffff"
                android:textSize="35dp"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.58"
                android:text="ㅘ [ワ]"
                android:textColor="#ffffff"
                android:textSize="35dp"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.58"
                android:text="ㅙ,ㅞ [ウェ]"
                android:textColor="#ffffff"
                android:textSize="35dp"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.58"
            android:text="ㅝ [ウォ]"
            android:textColor="#ffffff"
            android:textSize="35dp"
            android:gravity="center" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.58"
                android:text="ㅟ,ㅢ [ウィ]"
                android:textColor="#ffffff"
                android:textSize="35dp"
                android:gravity="center" />
        </LinearLayout>


    </ViewFlipper>

</FrameLayout>
